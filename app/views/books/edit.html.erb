<div class="edit">
  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model:@book, url: book_path(@book),method: :patch do |f| %>

    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field:title %>
    </div>

    <div class="field">
      <label for="edit_body">Body</label>
      <%= f.text_area:body %>
    </div>

    <%= f.submit'Update Book' %>

  <% end %>

  <P>
    <%= link_to "Show", book_path(@book.id),class:"link" %>
    |
    <%= link_to "Back","/books",class:"link" %>
  </P>
</div>