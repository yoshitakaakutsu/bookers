<h1>Books</h1>



  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </table>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <a href="/show">Show</a>
        <a href="/edit">Edit</a>
        <a href="/destroy">Destroy</a>
      </td>
    </tr>
  </tbody>

    <% end %>



<h2>New Book</h2>
<%= form_with model: @book, url: '/book', method: :post do |f| %>

  <h5>title</h5>
  <%= f.text_field:title %>

  <h5>body</h5>
  <%= f.text_area:body %>

  <%= f.submit'Create Book' %>
<% end %>